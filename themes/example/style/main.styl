*
  box-sizing border-box

body
  margin 0
  padding-top 80px

nav
  position fixed
  top 0
  left 0
  width 100%
  background #fffc
  backdrop-filter blur(10px)
  display flex
  padding 12px
  box-shadow 0 0 8px #0008
  a
    color #777
    text-decoration none
    padding 4px
    &:hover
      color #000
.site-name
  font-weight bold
  padding 4px

main
  display flex
  flex-direction column
  gap 24px
  align-items center
  &>*
    width calc(100vw - 32px)
    max-width 900px
    box-shadow 0 0 8px #0008
    padding 32px
    margin 0

.post
  display flex
  flex-direction column
  gap 4px
  a
    font-size 24px
    text-decoration none
    color #000
  &:has(a:hover)
    background #f8f8f8
.tags
.cate
  display flex
  gap 4px
  a
    color #000
    text-decoration none
    padding 6px 10px
    border 1px solid
    &:hover
      background #f8f8f8
  span
    border 1px solid #ddd
    padding 4px 6px

footer
  width 100%
  padding 32px
  text-align center
  line-height 2
  margin-top 32px
  box-shadow 0 0 8px #0008
